<%= render @list %>
<div>
  <%= link_to "ajouter un nouveau signet (association film/liste)", new_list_bookmark_path(@list) %>

  <div class="bookmarks">
    <ul>
      <% @list.bookmarks.each do |bookmark| %>
        <li><%= bookmark.comment %> <%= link_to "delete bookmark", list_delete_bookmark_path(@list, bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure ?" } %></li>
      <% end %>
    </ul>
  </div>

  <p><%= link_to "Back to lists", lists_path %></p>
</div>
